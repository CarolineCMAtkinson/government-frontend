<div class="column-third">
  <% if local_assigns.has_key?(:tasklist) && show_tasklist_sidebar? -%>
    <% tasklist = local_assigns[:tasklist] -%>
    <h2 class="task-list-title">
       <a href="<%= tasklist[:base_path] %>"><%= tasklist[:title] %></a>
    </h2>
    <%= render 'govuk_component/task_list', tasklist[:tasklist] %>
  <% elsif @navigation.should_present_taxonomy_navigation? -%>
    <%= render 'govuk_component/taxonomy_sidebar', @content_item.taxonomy_sidebar %>
  <% else -%>
    <%= render 'components/related-navigation', @content_item.related_navigation %>
  <% end -%>
</div>
