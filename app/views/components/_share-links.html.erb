<%
  title ||= 'Share this page'
  facebook_href ||= false
  twitter_href ||= false
%>
<% if facebook_href || twitter_href %>
  <div class="app-c-share-links dont-print" data-module="track-share-button-clicks">
    <h2 class="app-c-share-links__title"><%= title %></h2>

    <% if facebook_href %>
      <%= link_to facebook_href,
        target: "_blank",
        rel: "noopener noreferrer",
        class: "app-c-share-links__link js-share-facebook" do %>
        <span class="app-c-share-links__link__icon app-c-share-links__link__icon--facebook"></span><span class="visually-hidden">Share on </span>Facebook<% end %>
    <% end %>

    <% if twitter_href %>
      <%= link_to twitter_href,
        target: "_blank",
        rel: "noopener noreferrer",
        class: "app-c-share-links__link js-share-twitter" do %>
        <span class="app-c-share-links__link__icon app-c-share-links__link__icon--twitter"></span><span class="visually-hidden">Share on </span>Twitter<% end %>
    <% end %>
  </div>
<% end %>
