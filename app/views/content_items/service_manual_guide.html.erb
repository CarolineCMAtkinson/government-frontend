<%= content_for :page_class, "service-manual-guide" %>

<!-- Breadcrumb -->
<div class="breadcrumb">
  <ol>
    <li><a href="/">Service Manual</a></li>
    <li><a href="/">Topic</a></li>
    <li>Guide name</li>
  </ol>
</div>

<!-- Page title and contact -->
<div class="grid-row">
  <div class="column-two-thirds">

    <!-- Page title -->
    <div class="page-title">
      <p class="page-title-context">
        Topic
      </p>
      <h1 class="page-title-heading">
        <%= @content_item.title %>
      </h1>
    </div>

  </div>
  <div class="column-third">

    <div class="community-contact">
      <p>
        Contact the <a href="#">Agile community</a> with any comments or questions.
      </p>
    </div>

  </div>
</div>

<ul class="header-links">
  <% @content_item.header_links.each do |header_link| %>
    <li><a href="<%=header_link[:href]%>"><%=header_link[:title]%></a></li>
  <% end %>
</ul>

<div class="grid-row">
  <div class="column-third">
  </div>
  <div class="column-two-thirds">
     <%= @content_item.body.html_safe %>
  </div>
</div>
