<% content_for :simple_header, true %>
<% content_for :title, @content_item.title %>

<div class="grid-row sidebar-with-body">
  <div class="column-two-thirds">
    <%= render 'govuk_component/title',
        title: @content_item.title %>
    <%= render 'govuk_component/govspeak',
        content: @content_item.body,
        direction: page_text_direction,
        rich_govspeak: true
    %>
    <div class="meta-data group">
      <% if @content_item.updated %>
        <p class="modified-date">
          <%= t 'common.last_updated' %>: <%= @content_item.updated %>
        </p>
      <% end %>
    </div>
  </div>
  <%= render 'shared/related_items', content_item: @content_item  %>
</div>
